<div class="row">
  <div class="text-center">
    <h2>Seja bem vindo ao Produs.</h2>
  </div>
</div>

<hr>

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
        <table class="table">
          <thead>
          <th class="col-md-3">Elemento</th>
          <th class="col-md-3">Concentração</th>
          <th class="col-md-3">Limite Inferior</th>
          <th class="col-md-3">Limite Superior</th>
          </thead>
          <tbody>
          <% @concentrations.each do |concentration| %>
            <tr class="<%= concentration.acceptable ? 'success' : 'danger' %>">
              <td><%= concentration.element.name %></td>
              <td><%= concentration.value.round(4) %></td>
              <td><%= concentration.element.inferior_limit.round(4) %></td>
              <td><%= concentration.element.upper_limit.round(4) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- BEGIN SITE ACTIVITY -->
  <div class="col-md-9">
    <div class="card ">
      <div class="row">
        <div class="col-md-8">
          <div class="card-head">
            <header>IBN - Índice de balanço nutricional </header>
          </div><!--end .card-head -->
          <div class="card-body height-8">
            <div id="flot-visitors-legend" class="flot-legend-horizontal stick-top-right no-y-padding"></div>
            <div id="flot-visitors" class="flot height-7" data-title="IBN" data-color="#7dd8d2,#0aa89e"></div>
          </div><!--end .card-body -->
        </div><!--end .col -->
        <div class="col-md-4">
          <div class="card-head">
            <header>Status hoje por hectare</header>
          </div>
          <div class="card-body height-8">
            <strong>214</strong> Uvas sadias
            <span class="pull-right text-success text-sm">
              0,18% <%= material_icon.trending_up %></span>
            <div class="progress progress-hairline">
              <div class="progress-bar progress-bar-primary-dark" style="width:43%"></div>
            </div>
            756 Prontas para colheita
            <span class="pull-right text-success text-sm">0,68% <%= material_icon.trending_up %></span>
            <div class="progress progress-hairline">
              <div class="progress-bar progress-bar-primary-dark" style="width:11%"></div>
            </div>
            291 Uvas doentes
            <span class="pull-right text-danger text-sm">21,08% <%= material_icon.trending_down %></span>
            <div class="progress progress-hairline">
              <div class="progress-bar progress-bar-danger" style="width:93%"></div>
            </div>
            32,301 Uvas em entressafra
            <span class="pull-right text-success text-sm">0,18% <%= material_icon.trending_up %></span>
            <div class="progress progress-hairline">
              <div class="progress-bar progress-bar-primary-dark" style="width:63%"></div>
            </div>
            132 Uvas em plantio
            <span class="pull-right text-success text-sm">0,18% <%= material_icon.trending_up %></span>
            <div class="progress progress-hairline">
              <div class="progress-bar progress-bar-primary-dark" style="width:47%"></div>
            </div>
          </div><!--end .card-body -->
        </div><!--end .col -->
      </div><!--end .row -->
    </div><!--end .card -->
  </div><!--end .col -->
  <!-- END SITE ACTIVITY -->

  <!-- BEGIN SERVER STATUS -->
  <div class="col-md-3">
    <div class="card">
      <div class="card-head">
        <header class="text-primary">Temperatura Media</header>
      </div><!--end .card-head -->
      <div class="card-body height-4">
        <div class="pull-right text-center">
          <em class="text-primary">Temperatura</em>
          <br/>
          <div id="serverStatusKnob" class="knob knob-shadow knob-primary knob-body-track size-2">
            <input type="text" class="dial" data-min="0" data-max="100" data-thickness=".09" value="50" data-readOnly=true>
          </div>
        </div>
      </div><!--end .card-body -->
      <div class="card-body height-4 no-padding">
        <div class="stick-bottom-left-right">
          <div id="rickshawGraph" class="height-4" data-color1="#0aa89e" data-color2="rgba(79, 89, 89, 0.2)"></div>
        </div>
      </div><!--end .card-body -->
    </div><!--end .card -->
  </div><!--end .col -->
  <!-- END SERVER STATUS -->
</div><!--end .row -->

